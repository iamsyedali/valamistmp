<!DOCTYPE hook PUBLIC "-//Liferay//DTD Hook 6.2.0//EN" "http://www.liferay.com/dtd/liferay-hook_6_2_0.dtd">

<hook>
    <portal-properties>portal-ext.properties</portal-properties>

    <language-properties>content/Language.properties</language-properties>
    <language-properties>content/Language_en.properties</language-properties>
    <language-properties>content/Language_fi.properties</language-properties>
    <language-properties>content/Language_nl.properties</language-properties>

    <custom-jsp-dir>/WEB-INF/hook/jsp</custom-jsp-dir>

    <struts-action>
        <struts-action-path>/portal/learn-portlet/open_package</struts-action-path>
        <struts-action-impl>com.arcusys.valamis.web.service.OpenPackageAction</struts-action-impl>
    </struts-action>

    <struts-action>
        <struts-action-path>/portal/learn-portlet/open_certificate</struts-action-path>
        <struts-action-impl>com.arcusys.valamis.web.service.OpenCertificateAction</struts-action-impl>
    </struts-action>

    <struts-action>
        <struts-action-path>/portal/learn-portlet/open_certificate_pdf</struts-action-path>
        <struts-action-impl>com.arcusys.valamis.web.service.OpenCertificatePdfAction</struts-action-impl>
    </struts-action>

</hook>
