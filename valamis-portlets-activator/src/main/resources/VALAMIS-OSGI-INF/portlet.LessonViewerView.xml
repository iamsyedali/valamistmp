<?xml version="1.0"?>

<component name="com.arcusys.valamis.web.portlet.LessonViewerView" immediate="true">
    <implementation class="com.arcusys.valamis.web.portlet.LessonViewerView"/>
    <service>
        <provide interface="javax.portlet.Portlet"/>
    </service>
    <property name="javax.portlet.security-role-ref" type="String" value="power-user,user"/>
    <property name="javax.portlet.portlet-name" type="String" value="com_arcusys_valamis_web_portlet_LessonViewerView"/>
    <property name="com.liferay.portlet.display-category" type="String" value="Valamis Lesson tools"/>
    <property name="javax.portlet.info.title" type="String" value="Lesson Viewer"/>
    <property name="javax.portlet.display-name" type="String" value="Lesson Viewer"/>
    <property name="javax.portlet.resource-bundle" type="String" value="content.Language"/>

    <property name="javax.portlet.portlet-mode" type="String" value="text/html;view,edit"/>
    <property name="javax.portlet.expiration-cache" type="Integer" value="0"/>
    <property name="com.liferay.portlet.icon" type="String" value="/img/logo.png"/>

    <!--TODO: restore-->
    <!--<friendly-url-mapping>learn-portlet</friendly-url-mapping>-->
    <property name="com.liferay.portlet.preferences-unique-per-layout" type="Boolean" value="false"/>
    <property name="com.liferay.portlet.show-portlet-access-denied" type="Boolean" value="false"/>
    <property name="com.liferay.portlet.instanceable" type="Boolean" value="false"/>
    <property name="com.liferay.portlet.private-session-attributes" type="Boolean" value="false"/>
    <property name="com.liferay.portlet.requires-namespaced-parameters" type="Boolean" value="false"/>
    <property name="com.liferay.portlet.ajaxable" type="Boolean" value="false"/>
    <property name="com.liferay.portlet.add-default-resource" type="Boolean" value="true"/>

    <property name="com.liferay.portlet.css-class-wrapper" type="String" value="valamis"/>
    <property name="com.liferay.portlet.header-portlet-css" type="String">
        /css/backbone.modal.css
        /css/backbone.modal.theme.css
        /css/toastr.css
        /css/selectize.css
    </property>
    <property name="com.liferay.portlet.footer-portlet-css" type="String" value="/css/valamis.css"/>
    

    <property name="com.liferay.portlet.header-portlet-javascript" type="String">

        /js/lesson-viewer-all.js

    </property>

</component>